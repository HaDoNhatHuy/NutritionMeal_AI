            </div>
        </div>

        <!-- BIỂU ĐỒ MACROS -->
        <div class="col-lg-6 mb-4">
            <div class="card p-4">
                <h4 class="card-title">🥗 Phân Bổ Macros</h4>
                <div class="chart-container">
                    <canvas id="macroPieChart"></canvas>
                </div>
            </div>
        </div>

        <!-- BIỂU ĐỒ LOẠI BỮA ĂN -->
        <div class="col-lg-6 mb-4">
            <div class="card p-4">
                <h4 class="card-title">🍴 Phân Bổ Theo Bữa Ăn</h4>
                <div class="chart-container">
                    <canvas id="mealTypePieChart"></canvas>
                </div>
            </div>
        </div>

        <!-- BIỂU ĐỒ THEO GIỜ -->
        <div class="col-12 mb-4">
            <div class="card p-4">
                <h4 class="card-title">⏰ Phân Bổ Calo Theo Giờ Trong Ngày</h4>
                <div class="chart-container">
                    <canvas id="hourlyChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- MỤC TIÊU MACROS -->
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card p-4">
                <h4 class="card-title">🎯 Mục Tiêu Macros Hàng Ngày</h4>
                @if (ViewBag.MacroGoals != null)
                {
                    var goals = (NutritionWebApp.Controllers.SettingsController.MacroGoals)ViewBag.MacroGoals;
                    string goalName = ViewBag.UserGoal == "TangCan" ? "Tăng cân" :
                    ViewBag.UserGoal == "GiamCan" ? "Giảm cân" :
                    ViewBag.UserGoal == "AnChay" ? "Ăn chay" :
                    ViewBag.UserGoal == "EatClean" ? "Eat Clean" : "Duy trì";

                    <div class="text-center">
                        <span class="goal-badge">
                            @goalName • @goals.ProteinPct.ToString("F0")% P • @goals.CarbPct.ToString("F0")% C • @goals.FatPct.ToString("F0")% F
                        </span>
                    </div>

                    <div class="nutrition-grid">
                        <div class="nutrition-card protein">
                            <div class="nutrition-label">Protein</div>
                            <h5 class="nutrition-value">@goals.ProteinGrams.ToString("F0")g</h5>
                        </div>
                        <div class="nutrition-card carbs">
                            <div class="nutrition-label">Carbs</div>
                            <h5 class="nutrition-value">@goals.CarbGrams.ToString("F0")g</h5>
                        </div>
                        <div class="nutrition-card fat">
                            <div class="nutrition-label">Fat</div>
                            <h5 class="nutrition-value">@goals.FatGrams.ToString("F0")g</h5>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert-custom">
                        ⚠️ Vui lòng cập nhật thông tin trong <strong>Cài đặt</strong> để xem Mục tiêu Macros.
                    </div>
                }
            </div>
        </div>
    </div>

