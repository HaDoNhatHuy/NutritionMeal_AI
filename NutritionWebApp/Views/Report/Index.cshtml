                <div class="chart-container">
                    <canvas id="weeklyChart"></canvas>
                </div>
            </div>
        </div>

        <!-- BIỂU ĐỒ THEO THÁNG -->
        <div class="col-lg-6 mb-4">
            <div class="card p-4">
                <h4 class="card-title">📅 Trung Bình Theo Tháng</h4>
                <div class="chart-container">
                    <canvas id="monthlyChart"></canvas>
