@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const tdeeTarget = parseFloat('@ViewBag.TDEE');

        // Biểu đồ Calorie theo ngày
        const dailyData = JSON.parse('@Html.Raw(ViewBag.DailyDataJson)');
        const dailyDates = dailyData.map(d => d.Date);
        const dailyCalories = dailyData.map(d => d.TotalCalories);
        const tdeeLine = dailyDates.map(() => tdeeTarget);

        new Chart(document.getElementById('dailyCalorieChart'), {
            type: 'line',
            data: {
                labels: dailyDates,
                datasets: [{
                    label: 'Calo nạp vào',
                    data: dailyCalories,
                    borderColor: '#10b981',
                    backgroundColor: 'rgba(16, 185, 129, 0.1)',
                    tension: 0.4,
                    fill: true,
                    borderWidth: 3,
                    pointRadius: 5,
                    pointBackgroundColor: '#10b981',
                    pointBorderColor: '#fff',
                    pointBorderWidth: 2
                }, {
                    label: 'Mục tiêu TDEE',
                    data: tdeeLine,
                    borderColor: '#f59e0b',
                    borderDash: [10, 5],
                    tension: 0,
                    pointRadius: 0,
                    fill: false,
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: true, position: 'top' },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        padding: 12,
                        cornerRadius: 8
                    }
                },
                scales: {
                    y: { beginAtZero: true, grid: { color: 'rgba(0, 0, 0, 0.05)' } },
                    x: { grid: { display: false } }
                }
            }
        });

        // Biểu đồ theo tuần
        const weeklyData = JSON.parse('@Html.Raw(ViewBag.WeeklyDataJson)');
        if (weeklyData.length > 0) {
            new Chart(document.getElementById('weeklyChart'), {
                type: 'bar',
                data: {
                    labels: weeklyData.map(d => d.Label),
                    datasets: [{
                        label: 'TB Calo/Tuần',
                        data: weeklyData.map(d => d.AvgCalories),
                        backgroundColor: '#3b82f6',
                        borderRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    plugins: { legend: { display: false } },
                    scales: { y: { beginAtZero: true } }
                }
            });
        }

        // Biểu đồ theo tháng
        const monthlyData = JSON.parse('@Html.Raw(ViewBag.MonthlyDataJson)');
        if (monthlyData.length > 0) {
            new Chart(document.getElementById('monthlyChart'), {
                type: 'bar',
                data: {
                    labels: monthlyData.map(d => d.Label),
                    datasets: [{
                        label: 'TB Calo/Tháng',
