@model NutritionWebApp.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
}

<style>
    .auth-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        /* background: linear-gradient(135deg, #48bb78 0%, #38a169 100%); */
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 50%, #f0f4f8 100%);
        padding: 40px 20px;
    }

    .auth-container {
        max-width: 500px;
        width: 100%;
    }

    .auth-card {
        background: white;
        border-radius: 30px;
        box-shadow: 0 30px 80px rgba(0, 0, 0, 0.3);
        overflow: hidden;
        animation: slideUp 0.6s ease;
    }

    @@keyframes slideUp {
        from

    {
        opacity: 0;
        transform: translateY(40px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .auth-header {
        background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
        padding: 50px 40px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .auth-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            animation: pulse 3s ease-in-out infinite;
        }

    @@keyframes pulse {
        0%, 100%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.1);
    }

    }

    .auth-icon {
        font-size: 4rem;
        margin-bottom: 15px;
        display: block;
        position: relative;
        z-index: 1;
    }

    .auth-title {
        color: white;
        font-size: 2.2rem;
        font-weight: 700;
        margin: 0;
        position: relative;
        z-index: 1;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
    }

    .auth-subtitle {
        color: rgba(255,255,255,0.9);
        margin-top: 10px;
        font-size: 1rem;
        position: relative;
        z-index: 1;
    }

    .auth-body {
        padding: 40px;
    }

    .validation-summary {
        background: linear-gradient(135deg, #fee 0%, #fdd 100%);
        border: 2px solid #f56565;
        border-radius: 15px;
        padding: 15px 20px;
        margin-bottom: 25px;
        animation: shake 0.5s ease;
    }

    @@keyframes shake {
        0%, 100%

    {
        transform: translateX(0);
    }

    25% {
        transform: translateX(-10px);
    }

    75% {
        transform: translateX(10px);
    }

    }

    .validation-summary ul {
        margin: 0;
        padding-left: 20px;
        color: #c53030;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.95rem;
    }

    .input-wrapper {
        position: relative;
    }

    .form-control {
        border: 2px solid #e2e8f0;
        border-radius: 15px;
        padding: 14px 20px 14px 50px;
        font-size: 1rem;
        transition: all 0.3s ease;
        width: 100%;
    }

        .form-control:focus {
            border-color: #48bb78;
            box-shadow: 0 0 0 4px rgba(72, 187, 120, 0.1);
            outline: none;
        }

    .input-icon {
        position: absolute;
        left: 18px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 1.3rem;
        color: #a0aec0;
        pointer-events: none;
    }

    .form-control:focus ~ .input-icon {
        color: #48bb78;
    }

    .text-danger {
        font-size: 0.85rem;
        margin-top: 6px;
        display: block;
        color: #e53e3e;
    }

    .password-toggle {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #a0aec0;
        cursor: pointer;
        font-size: 1.2rem;
        padding: 5px;
        transition: color 0.3s ease;
    }

        .password-toggle:hover {
            color: #48bb78;
        }

    .submit-btn {
        background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
        border: none;
        border-radius: 15px;
        padding: 16px;
        font-size: 1.1rem;
        font-weight: 700;
        color: white;
        width: 100%;
        margin-top: 10px;
        box-shadow: 0 10px 25px rgba(72, 187, 120, 0.4);
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .submit-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(72, 187, 120, 0.5);
        }

        .submit-btn:active {
            transform: translateY(-1px);
        }

    .auth-footer {
        text-align: center;
        margin-top: 30px;
        padding-top: 25px;
        border-top: 2px solid #e2e8f0;
    }

    .auth-footer-text {
        color: #718096;
        font-size: 0.95rem;
        margin-bottom: 10px;
    }

    .auth-link {
        color: #48bb78;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .auth-link:hover {
            color: #38a169;
            text-decoration: underline;
        }

    .password-strength {
        margin-top: 8px;
        font-size: 0.85rem;
    }

    .strength-bar {
        height: 4px;
        background: #e2e8f0;
        border-radius: 2px;
        overflow: hidden;
        margin-top: 5px;
    }

    .strength-fill {
        height: 100%;
        transition: all 0.3s ease;
        width: 0%;
    }

    .strength-weak .strength-fill {
        width: 33%;
        background: #f56565;
    }

    .strength-medium .strength-fill {
        width: 66%;
        background: #ed8936;
    }

    .strength-strong .strength-fill {
        width: 100%;
        background: #48bb78;
    }

    @@media (max-width: 576px) {
        .auth-wrapper {
            padding: 0;
            background: white; /* Bỏ gradient nền, dùng nền trắng */
            align-items: flex-start; /* Đẩy lên trên cùng */
        }

        .auth-container {
            max-width: 100%;
        }

        .auth-card {
            border-radius: 0; /* Bỏ bo góc */
            box-shadow: none; /* Bỏ đổ bóng */
            min-height: 100vh; /* Full chiều cao màn hình */
        }

        .auth-header {
            padding: 60px 25px 40px; /* Tăng padding top */
            border-bottom-left-radius: 30px;
            border-bottom-right-radius: 30px;
        }

        .auth-body {
            padding: 30px 25px;
        }
    }
</style>

<div class="auth-wrapper">
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <span class="auth-icon">✨</span>
                <h1 class="auth-title">Đăng ký</h1>
                <p class="auth-subtitle">Tạo tài khoản mới và bắt đầu hành trình!</p>
            </div>

            <div class="auth-body">
                <form asp-action="Register" method="post">
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                    {
                        <div asp-validation-summary="All" class="validation-summary"></div>
                    }

                    <div class="form-group">
                        <label asp-for="FullName" class="form-label">
                            👤 Họ và tên
                        </label>
                        <div class="input-wrapper">
                            <input asp-for="FullName" class="form-control" placeholder="Nguyễn Văn A" />
                            <span class="input-icon">👤</span>
                        </div>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="form-label">
                            📧 Email
                        </label>
                        <div class="input-wrapper">
                            <input asp-for="Email" class="form-control" placeholder="example@email.com" />
                            <span class="input-icon">📧</span>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="form-label">
                            🔒 Mật khẩu
                        </label>
                        <div class="input-wrapper">
                            <input asp-for="Password" type="password" class="form-control" id="password" placeholder="••••••••" onkeyup="checkPasswordStrength()" />
                            <span class="input-icon">🔒</span>
                            <button type="button" class="password-toggle" onclick="togglePassword('password', this)">
                                👁️
                            </button>
                        </div>
                        <div class="password-strength">
                            <div class="strength-bar" id="strengthBar">
                                <div class="strength-fill"></div>
                            </div>
                            <span id="strengthText"></span>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="form-label">
                            ✅ Xác nhận mật khẩu
                        </label>
                        <div class="input-wrapper">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="••••••••" />
                            <span class="input-icon">✅</span>
                            <button type="button" class="password-toggle" onclick="togglePassword('confirmPassword', this)">
                                👁️
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="submit-btn">
                        🚀 Đăng ký ngay
                    </button>
                </form>

                <div class="auth-footer">
                    <p class="auth-footer-text">Đã có tài khoản?</p>
                    <a asp-action="Login" class="auth-link">🔐 Đăng nhập tại đây</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function togglePassword(inputId, button) {
        const passwordInput = document.getElementById(inputId);

        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            button.textContent = '🙈';
        } else {
            passwordInput.type = 'password';
            button.textContent = '👁️';
        }
    }

    function checkPasswordStrength() {
        const password = document.getElementById('password').value;
        const strengthBar = document.getElementById('strengthBar');
        const strengthText = document.getElementById('strengthText');

        let strength = 0;

        if (password.length >= 8) strength++;
        if (password.match(/[a-z]/) && password.match(/[A-Z]/)) strength++;
        if (password.match(/[0-9]/)) strength++;
        if (password.match(/[^a-zA-Z0-9]/)) strength++;

        strengthBar.className = 'strength-bar';

        if (strength === 0) {
            strengthText.textContent = '';
        } else if (strength <= 2) {
            strengthBar.classList.add('strength-weak');
            strengthText.textContent = '⚠️ Yếu';
            strengthText.style.color = '#f56565';
        } else if (strength === 3) {
            strengthBar.classList.add('strength-medium');
            strengthText.textContent = '⚡ Trung bình';
            strengthText.style.color = '#ed8936';
        } else {
            strengthBar.classList.add('strength-strong');
            strengthText.textContent = '✅ Mạnh';
            strengthText.style.color = '#48bb78';
        }
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}