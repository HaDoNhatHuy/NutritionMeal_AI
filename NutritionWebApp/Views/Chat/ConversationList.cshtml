@model List<NutritionWebApp.ViewModels.ChatSessionSummary>
@{
    ViewData["Title"] = "Lịch sử Trò chuyện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .chat-history-wrapper {
            background: var(--soft-bg);
            min-height: 100vh;
            padding: 2.5rem 0;
        }

        .chat-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1.5rem;
        }

        .chat-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .chat-title {
            font-size: 2.25rem;
            font-weight: 800;
            color: var(--primary-color);
            margin-bottom: 0.75rem;
        }

        .chat-subtitle {
            font-size: 1.125rem;
            color: var(--text-secondary);
        }

        .sessions-container {
            background: white;
            border: 1px solid var(--border-color);
            border-radius: 12px;
            overflow: hidden;
            box-shadow: var(--shadow-sm);
        }

        .sessions-header {
            background: var(--soft-bg);
            border-bottom: 1px solid var(--border-color);
            padding: 1.5rem 2rem;
        }

        .sessions-header-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--primary-color);
            margin: 0 0 0.5rem 0;
        }

        .sessions-count {
            font-size: 0.95rem;
            color: var(--text-secondary);
            margin: 0;
        }

        .sessions-list {
            max-height: calc(100vh - 350px);
            overflow-y: auto;
        }

        .session-row-wrapper {
            position: relative;
            border-bottom: 1px solid var(--border-color);
            transition: background 0.2s ease;
        }

            .session-row-wrapper:hover {
                background: var(--soft-bg);
            }

            .session-row-wrapper:last-child {
                border-bottom: none;
            }

        .session-item {
            display: block;
            padding: 1.75rem 2rem;
            text-decoration: none;
            color: var(--text-primary);
            transition: all 0.2s ease;
        }

        .session-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 0.75rem;
            gap: 1rem;
        }

        .session-title {
            font-weight: 700;
            font-size: 1.125rem;
            color: var(--primary-color);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.625rem;
        }

        .session-icon {
            font-size: 1.25rem;
        }

        .message-count {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: var(--soft-bg);
            color: var(--text-secondary);
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 600;
            border: 1px solid var(--border-color);
        }

        .last-message {
            font-size: 0.95rem;
            color: var(--text-secondary);
            line-height: 1.6;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            margin-bottom: 0.75rem;
        }

        .session-meta {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            font-size: 0.875rem;
            color: var(--text-secondary);
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.375rem;
        }

        .delete-session-btn {
            position: absolute;
            top: 50%;
            right: 2rem;
            transform: translateY(-50%);
            z-index: 5;
            border-radius: 6px;
            padding: 0.5rem 1rem;
            font-weight: 600;
            font-size: 0.875rem;
            background: white;
            border: 1px solid var(--danger-color);
            color: var(--danger-color);
            cursor: pointer;
            transition: all 0.2s ease;
        }

            .delete-session-btn:hover {
                background: var(--danger-color);
                color: white;
            }

        .session-row-wrapper .session-item {
            padding-right: 120px;
        }

        .empty-state {
            text-align: center;
            padding: 5rem 2rem;
        }

        .empty-icon {
            font-size: 5rem;
            margin-bottom: 1.5rem;
            opacity: 0.5;
        }

        .empty-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 0.75rem;
        }

        .empty-text {
            color: var(--text-secondary);
            font-size: 1rem;
            margin-bottom: 2rem;
        }

        .start-chat-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: var(--accent-color);
            color: white;
            padding: 0.875rem 1.75rem;
            border-radius: 8px;
            font-weight: 700;
            text-decoration: none;
            transition: all 0.2s ease;
        }

            .start-chat-btn:hover {
                background: #2980b9;
                color: white;
                transform: translateY(-2px);
            }

        @@media (max-width: 768px) {
            .chat-header

        {
            margin-bottom: 2rem;
        }

        .chat-title {
            font-size: 1.75rem;
        }

        .session-item {
            padding: 1.5rem 1rem;
        }

        .sessions-header {
            padding: 1.25rem 1rem;
        }

        .session-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .delete-session-btn {
            position: static;
            transform: none;
            margin-top: 0.75rem;
            width: 100%;
        }

        .session-row-wrapper .session-item {
            padding-right: 1rem;
        }

        }
    </style>
}

<div class="chat-history-wrapper">
    <div class="container chat-container">
        <div class="chat-header">
            <h1 class="chat-title">💬 Lịch sử Trò chuyện</h1>
            <p class="chat-subtitle">Xem lại các cuộc trò chuyện với Nutrition AI</p>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="sessions-container">
                <div class="empty-state">
                    <div class="empty-icon">🤖💭</div>
                    <h3 class="empty-title">Chưa có cuộc trò chuyện nào</h3>
                    <p class="empty-text">
                        Bắt đầu cuộc trò chuyện đầu tiên để nhận tư vấn dinh dưỡng cá nhân hóa!
                    </p>
                    <a href="/" class="start-chat-btn">
                        ✨ Bắt đầu trò chuyện
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="sessions-container">
                <div class="sessions-header">
                    <h2 class="sessions-header-title">📚 Tất cả cuộc trò chuyện</h2>
                    <p class="sessions-count">
                        Tổng cộng @Model.Count cuộc trò chuyện • @Model.Sum(s => s.MessageCount) tin nhắn
                    </p>
                </div>

                <div class="sessions-list">
                    @foreach (var session in Model)
                    {
                        var dateUrlFormat = session.SessionDate.ToString("yyyy-MM-dd");

                        <div class="session-row-wrapper" id="session-row-@dateUrlFormat">
                            <a asp-action="ViewSession" asp-route-date="@dateUrlFormat" class="session-item">
                                <div class="session-header">
                                    <div class="session-title">
                                        <span class="session-icon">💬</span>
                                        @session.Title
                                    </div>
                                    <div class="message-count">
                                        <span>💭</span>
                                        @session.MessageCount tin nhắn
                                    </div>
                                </div>
                                <div class="last-message">
                                    @(session.LastMessagePreview.Length > 150
                                        ? session.LastMessagePreview.Substring(0, 150) + "..."
                                        : session.LastMessagePreview)
                                </div>
                                <div class="session-meta">
                                    <div class="meta-item">
                                        <span>📅</span>
                                        @session.SessionDate.ToString("dd/MM/yyyy")
                                    </div>
                                    <div class="meta-item">
                                        <span>🕒</span>
                                        @session.SessionDate.ToString("dddd", new System.Globalization.CultureInfo("vi-VN"))
                                    </div>
                                </div>
                            </a>
                            <button class="delete-session-btn" data-date="@dateUrlFormat" title="Xóa phiên trò chuyện">
                                🗑️ Xóa
                            </button>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.delete-session-btn').forEach(button => {
                button.addEventListener('click', async function(e) {
                    e.stopPropagation();
                    e.preventDefault();

                    const dateToDelete = this.getAttribute('data-date');
                    const sessionRowId = `session-row-${dateToDelete}`;

                    if (confirm(`Bạn có chắc chắn muốn xóa toàn bộ cuộc trò chuyện ngày ${dateToDelete} không?`)) {
                        try {
                            this.disabled = true;
                            const response = await fetch(`/Chat/DeleteSession`, {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({ date: dateToDelete })
                            });

                            const data = await response.json();
                            if (data.success) {
                                const sessionElement = document.getElementById(sessionRowId);
                                if (sessionElement) {
                                    sessionElement.style.opacity = '0';
                                    setTimeout(() => sessionElement.remove(), 300);
                                }
                            } else {
                                alert(`Lỗi xóa: ${data.error}`);
                                this.disabled = false;
                            }
                        } catch (error) {
                            alert('Lỗi kết nối. Vui lòng thử lại.');
                            this.disabled = false;
                        }
                    }
                });
            });
        });
    </script>
}