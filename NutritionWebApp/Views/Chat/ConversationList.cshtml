@model List<NutritionWebApp.ViewModels.ChatSessionSummary>
@{
    ViewData["Title"] = "Lịch sử Trò chuyện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style>
        .chat-history-wrapper {
            background: linear-gradient(to bottom, #f8fafc 0%, #f1f5f9 50%, #e2e8f0 100%);
            min-height: 100vh;
            padding: 40px 0 60px 0;
        }

        .chat-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 30px;
        }

        .chat-header {
            text-align: center;
            margin-bottom: 40px;
            animation: fadeInDown 0.6s ease;
        }

        @@keyframes fadeInDown {
            from

        {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .chat-title {
            color: #1e293b;
            font-size: 2.5rem;
            font-weight: 800;
            margin-bottom: 12px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .chat-subtitle {
            color: #64748b;
            font-size: 1.1rem;
            font-weight: 500;
        }

        .sessions-container {
            background: white;
            border-radius: 24px;
            box-shadow: 0 4px 30px rgba(0,0,0,0.06);
            overflow: hidden;
            border: 1px solid #e2e8f0;
            animation: fadeInUp 0.6s ease;
        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .sessions-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 30px 40px;
            color: white;
            position: relative;
            overflow: hidden;
        }

            .sessions-header::before {
                content: '';
                position: absolute;
                top: -50%;
                right: -10%;
                width: 300px;
                height: 300px;
                background: rgba(255, 255, 255, 0.1);
                border-radius: 50%;
            }

            .sessions-header::after {
                content: '';
                position: absolute;
                bottom: -40%;
                left: -5%;
                width: 250px;
                height: 250px;
                background: rgba(255, 255, 255, 0.08);
                border-radius: 50%;
            }

        .sessions-header-content {
            position: relative;
            z-index: 1;
        }

        .sessions-header-title {
            font-size: 1.6rem;
            font-weight: 700;
            margin: 0 0 8px 0;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .sessions-header-icon {
            font-size: 2rem;
        }

        .sessions-count {
            font-size: 1rem;
            opacity: 0.95;
            margin: 0;
            font-weight: 500;
        }

        .sessions-list {
            max-height: calc(100vh - 400px);
            overflow-y: auto;
            scrollbar-width: thin;
            scrollbar-color: #cbd5e1 #f1f5f9;
        }

            .sessions-list::-webkit-scrollbar {
                width: 8px;
            }

            .sessions-list::-webkit-scrollbar-track {
                background: #f1f5f9;
            }

            .sessions-list::-webkit-scrollbar-thumb {
                background: #cbd5e1;
                border-radius: 10px;
            }

                .sessions-list::-webkit-scrollbar-thumb:hover {
                    background: #94a3b8;
                }

        .session-item {
            display: block;
            padding: 30px 40px;
            border-bottom: 1px solid #f1f5f9;
            text-decoration: none;
            color: #1f2937;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            background: white;
        }

            .session-item::before {
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                bottom: 0;
                width: 4px;
                background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
                transform: scaleY(0);
                transform-origin: bottom;
                transition: transform 0.3s ease;
            }

            .session-item:hover {
                background: linear-gradient(135deg, #fafbff 0%, #f5f7ff 100%);
                transform: translateX(6px);
                box-shadow: 0 4px 20px rgba(102, 126, 234, 0.1);
            }

                .session-item:hover::before {
                    transform: scaleY(1);
                    transform-origin: top;
                }

            .session-item:last-child {
                border-bottom: none;
            }

        .session-header {
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
            margin-bottom: 14px;
            gap: 20px;
        }

        .session-title {
            font-weight: 700;
            font-size: 1.3rem;
            color: #1e293b;
            margin: 0;
            flex: 1;
            display: flex;
            align-items: center;
            gap: 12px;
            line-height: 1.4;
        }

        .session-icon {
            font-size: 1.5rem;
            flex-shrink: 0;
            filter: grayscale(20%);
        }

        .message-count {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 10px 18px;
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            color: #475569;
            border-radius: 24px;
            font-size: 0.9rem;
            font-weight: 700;
            flex-shrink: 0;
            border: 2px solid #e2e8f0;
            transition: all 0.3s ease;
        }

        .session-item:hover .message-count {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-color: #667eea;
            transform: scale(1.05);
        }

        .message-count-icon {
            font-size: 1rem;
        }

        .last-message {
            font-size: 1rem;
            color: #64748b;
            line-height: 1.7;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            margin-bottom: 12px;
            padding-left: 40px;
        }

        .session-meta {
            display: flex;
            align-items: center;
            gap: 24px;
            padding-left: 40px;
            font-size: 0.9rem;
            color: #94a3b8;
            font-weight: 500;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 6px;
            padding: 6px 14px;
            background: #f8fafc;
            border-radius: 12px;
            transition: all 0.3s ease;
        }

        .session-item:hover .meta-item {
            background: #e0e7ff;
            color: #667eea;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 100px 40px;
        }

        .empty-icon {
            font-size: 6rem;
            margin-bottom: 30px;
            animation: float 3s ease-in-out infinite;
            opacity: 0.8;
        }

        @@keyframes float {
            0%, 100%

        {
            transform: translateY(0) rotate(0deg);
        }

        50% {
            transform: translateY(-15px) rotate(5deg);
        }

        }

        .empty-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 12px;
        }

        .empty-text {
            color: #64748b;
            font-size: 1.1rem;
            margin-bottom: 35px;
            line-height: 1.6;
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
        }

        .start-chat-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 16px 36px;
            border-radius: 16px;
            font-weight: 700;
            font-size: 1.1rem;
            text-decoration: none;
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .start-chat-btn::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
                transition: left 0.5s ease;
            }

            .start-chat-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
                color: white;
            }

                .start-chat-btn:hover::before {
                    left: 100%;
                }

        /* Stats Badge */
        .stats-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 8px 16px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            font-size: 0.9rem;
            margin-top: 10px;
        }

        /* Responsive */
        @@media (max-width: 1024px) {
            .chat-container

        {
            max-width: 100%;
            padding: 0 20px;
        }

        .sessions-list {
            max-height: calc(100vh - 350px);
        }

        }

        @@media (max-width: 768px) {
            .chat-title

        {
            font-size: 2rem;
        }

        .session-item {
            padding: 24px 20px;
        }

        .sessions-header {
            padding: 24px 20px;
        }

        .session-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 12px;
        }

        .message-count {
            align-self: flex-start;
        }

        .session-title {
            font-size: 1.15rem;
        }

        .last-message,
        .session-meta {
            padding-left: 0;
        }

        .session-meta {
            flex-wrap: wrap;
            gap: 12px;
        }

        .sessions-list {
            max-height: calc(100vh - 300px);
        }

        .empty-state {
            padding: 60px 20px;
        }

        .empty-icon {
            font-size: 4rem;
        }

        .empty-title {
            font-size: 1.5rem;
        }

        .empty-text {
            font-size: 1rem;
        }

        }

        @@media (max-width: 480px) {
            .chat-history-wrapper

        {
            padding: 20px 0 40px 0;
        }

        .chat-container {
            padding: 0 15px;
        }

        .session-item {
            padding: 20px 16px;
        }

        .sessions-header {
            padding: 20px 16px;
        }

        .sessions-header-title {
            font-size: 1.3rem;
        }

        }

        /* Scroll to top animation */
        @@keyframes slideInRight {
            from

        {
            opacity: 0;
            transform: translateX(-20px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }

        }

        .session-item {
            animation: slideInRight 0.4s ease backwards;
        }

            .session-item:nth-child(1) {
                animation-delay: 0.05s;
            }

            .session-item:nth-child(2) {
                animation-delay: 0.1s;
            }

            .session-item:nth-child(3) {
                animation-delay: 0.15s;
            }

            .session-item:nth-child(4) {
                animation-delay: 0.2s;
            }

            .session-item:nth-child(5) {
                animation-delay: 0.25s;
            }
    </style>
}

<div class="chat-history-wrapper">
    <div class="container chat-container">
        @* <div class="chat-header">
            <h1 class="chat-title">💬 Lịch sử Trò chuyện</h1>
            <p class="chat-subtitle">Xem lại các cuộc trò chuyện với Nutrition AI</p>
        </div> *@

        @if (Model == null || !Model.Any())
        {
            <div class="sessions-container">
                <div class="empty-state">
                    <div class="empty-icon">🤖💭</div>
                    <h3 class="empty-title">Chưa có cuộc trò chuyện nào</h3>
                    <p class="empty-text">Bắt đầu cuộc trò chuyện đầu tiên với Nutrition AI để nhận tư vấn dinh dưỡng cá nhân hóa!</p>
                    <a href="/Chat/Index" class="start-chat-btn">
                        <span>✨</span>
                        Bắt đầu trò chuyện
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="sessions-container">
                <div class="sessions-header">
                    <div class="sessions-header-content">
                        <h2 class="sessions-header-title">
                            <span class="sessions-header-icon">📚</span>
                            Tất cả cuộc trò chuyện
                        </h2>
                        <p class="sessions-count">
                            Tổng cộng @Model.Count cuộc trò chuyện
                            <span class="stats-badge">
                                <span>💬</span>
                                @Model.Sum(s => s.MessageCount) tin nhắn
                            </span>
                        </p>
                    </div>
                </div>

                <div class="sessions-list">
                    @foreach (var session in Model)
                    {
                        <a asp-action="ViewSession"
                           asp-route-date="@session.SessionDate.ToString("yyyy-MM-dd")"
                           class="session-item">
                            <div class="session-header">
                                <div class="session-title">
                                    <span class="session-icon">💬</span>
                                    @session.Title
                                </div>
                                <div class="message-count">
                                    <span class="message-count-icon">💭</span>
                                    @session.MessageCount tin nhắn
                                </div>
                            </div>
                            <div class="last-message">
                                @(session.LastMessagePreview.Length > 150
                                    ? session.LastMessagePreview.Substring(0, 150) + "..."
                                    : session.LastMessagePreview)
                            </div>
                            <div class="session-meta">
                                <div class="meta-item">
                                    <span>📅</span>
                                    @session.SessionDate.ToString("dd/MM/yyyy")
                                </div>
                                <div class="meta-item">
                                    <span>🕒</span>
                                    @session.SessionDate.ToString("HH:mm")
                                </div>
                            </div>
                        </a>
                    }
                </div>
            </div>
        }
    </div>
</div>