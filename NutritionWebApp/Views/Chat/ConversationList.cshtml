@model List<NutritionWebApp.ViewModels.ChatSessionSummary>
@{
    ViewData["Title"] = "Lịch sử Trò chuyện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style>
        .chat-history-wrapper {
            background: linear-gradient(to bottom, #fef3c7 0%, #fde68a 50%, #fcd34d 100%);
            min-height: 100vh;
            padding: 50px 0 80px 0;
        }

        .chat-container {
            max-width: 900px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .chat-header {
            text-align: center;
            margin-bottom: 45px;
        }

        .chat-title {
            color: #78350f;
            font-size: 2.8rem;
            font-weight: 800;
            margin-bottom: 12px;
            text-shadow: 0 2px 10px rgba(245, 158, 11, 0.15);
        }

        .chat-subtitle {
            color: #92400e;
            font-size: 1.1rem;
            font-weight: 500;
            opacity: 0.9;
        }

        .no-history {
            background: linear-gradient(135deg, #ffffff 0%, #fef3c7 100%);
            border: 2px solid #f59e0b;
            border-radius: 20px;
            padding: 50px 30px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        }

        .no-history-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.7;
        }

        .no-history p {
            color: #78350f;
            font-size: 1.15rem;
            font-weight: 600;
            margin: 0;
        }

        .sessions-container {
            background: white;
            border-radius: 24px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.08);
            overflow: hidden;
            border: 1px solid rgba(245, 158, 11, 0.1);
        }

        .session-item {
            display: block;
            padding: 28px 32px;
            border-bottom: 2px solid #fef3c7;
            text-decoration: none;
            color: #1f2937;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .session-item::before {
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                bottom: 0;
                width: 5px;
                background: linear-gradient(180deg, #f59e0b 0%, #d97706 100%);
                transform: scaleY(0);
                transition: transform 0.3s ease;
            }

            .session-item:hover {
                background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
                transform: translateX(8px);
                box-shadow: 0 5px 15px rgba(245, 158, 11, 0.1);
            }

                .session-item:hover::before {
                    transform: scaleY(1);
                }

            .session-item:last-child {
                border-bottom: none;
            }

        .session-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 12px;
            gap: 15px;
        }

        .session-title {
            font-weight: 700;
            font-size: 1.25rem;
            color: #78350f;
            margin: 0;
            flex: 1;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .session-icon {
            font-size: 1.4rem;
            flex-shrink: 0;
        }

        .message-count {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 8px 16px;
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            color: #92400e;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 700;
            flex-shrink: 0;
            border: 2px solid #fcd34d;
        }

        .message-count-icon {
            font-size: 1rem;
        }

        .last-message {
            font-size: 1rem;
            color: #6b7280;
            line-height: 1.6;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            padding-left: 35px;
        }

        .session-meta {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-top: 12px;
            padding-left: 35px;
            font-size: 0.85rem;
            color: #9ca3af;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .empty-state {
            text-align: center;
            padding: 80px 20px;
        }

        .empty-icon {
            font-size: 5rem;
            margin-bottom: 25px;
            opacity: 0.6;
            animation: float 3s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100%

        {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }

        }

        .empty-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #78350f;
            margin-bottom: 12px;
        }

        .empty-text {
            color: #92400e;
            font-size: 1.05rem;
            margin-bottom: 30px;
        }

        .start-chat-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
            color: white;
            padding: 14px 32px;
            border-radius: 16px;
            font-weight: 700;
            font-size: 1.05rem;
            text-decoration: none;
            box-shadow: 0 8px 20px rgba(245, 158, 11, 0.3);
            transition: all 0.3s ease;
        }

            .start-chat-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 30px rgba(245, 158, 11, 0.4);
                color: white;
                background: linear-gradient(135deg, #d97706 0%, #b45309 100%);
            }

        .sessions-header {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
            padding: 25px 32px;
            color: white;
        }

        .sessions-header-title {
            font-size: 1.3rem;
            font-weight: 700;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .sessions-count {
            font-size: 0.95rem;
            opacity: 0.95;
            margin-top: 5px;
        }

        @@media (max-width: 768px) {
            .chat-title

        {
            font-size: 2.2rem;
        }

        .session-item {
            padding: 22px 20px;
        }

        .session-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .message-count {
            align-self: flex-start;
        }

        .session-title {
            font-size: 1.1rem;
        }

        .last-message,
        .session-meta {
            padding-left: 0;
        }

        .sessions-header {
            padding: 20px;
        }

        }
    </style>
}

<div class="chat-history-wrapper">
    <div class="container chat-container">
        @* <div class="chat-header">
            <h1 class="chat-title">💬 Lịch sử Trò chuyện</h1>
            <p class="chat-subtitle">Xem lại các cuộc trò chuyện với Nutrition AI</p>
        </div> *@

        @if (Model == null || !Model.Any())
        {
            <div class="sessions-container">
                <div class="empty-state">
                    <div class="empty-icon">🤖💭</div>
                    <h3 class="empty-title">Chưa có cuộc trò chuyện nào</h3>
                    <p class="empty-text">Bắt đầu cuộc trò chuyện đầu tiên với Nutrition AI để nhận tư vấn dinh dưỡng cá nhân hóa!</p>
                    <a href="/Chat/Index" class="start-chat-btn">
                        <span>✨</span>
                        Bắt đầu trò chuyện
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="sessions-container">
                <div class="sessions-header">
                    <h2 class="sessions-header-title">
                        <span>📚</span>
                        Tất cả cuộc trò chuyện
                    </h2>
                    <p class="sessions-count">Tổng cộng @Model.Count cuộc trò chuyện</p>
                </div>

                @foreach (var session in Model)
                {
                    <a asp-action="ViewSession"
                       asp-route-date="@session.SessionDate.ToString("yyyy-MM-dd")"
                       class="session-item">
                        <div class="session-header">
                            <div class="session-title">
                                <span class="session-icon">💬</span>
                                @session.Title
                            </div>
                            <div class="message-count">
                                <span class="message-count-icon">💭</span>
                                @session.MessageCount tin nhắn
                            </div>
                        </div>
                        <div class="last-message">
                            @(session.LastMessagePreview.Length > 100
                                ? session.LastMessagePreview.Substring(0, 100) + "..."
                                : session.LastMessagePreview)
                        </div>
                        <div class="session-meta">
                            <div class="meta-item">
                                <span>📅</span>
                                @session.SessionDate.ToString("dd/MM/yyyy")
                            </div>
                            <div class="meta-item">
                                <span>🕒</span>
                                @session.SessionDate.ToString("HH:mm")
                            </div>
                        </div>
                    </a>
                }
            </div>
        }
    </div>
</div>