@model List<NutritionWebApp.Models.Entities.ChatHistory>
@{
    ViewData["Title"] = "Lịch sử Chatbot AI";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style>
        .chat-detail-wrapper {
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 50%, #f0f4f8 100%);
            min-height: 100vh;
            padding: 20px 0;
        }

        .chat-detail-container {
            max-width: 1600px;
            margin: 0 auto;
            padding: 0 30px;
            height: calc(100vh - 40px);
            display: flex;
            flex-direction: column;
        }

        .chat-detail-header {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 20px;
        }

        .back-button {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            background: white;
            border: 2px solid #4299e1;
            color: #2d3748;
            padding: 12px 24px;
            border-radius: 16px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            font-size: 1rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

            .back-button:hover {
                background: #4299e1;
                border-color: #3182ce;
                color: white;
                transform: translateX(-5px);
                box-shadow: 0 8px 20px rgba(66, 153, 225, 0.3);
            }

        .chat-detail-title {
            color: #2d3748;
            font-size: 2rem;
            font-weight: 800;
            margin: 0;
            flex: 1;
        }

        .chat-container-card {
            background: white;
            border-radius: 28px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            display: flex;
            flex-direction: column;
            flex: 1;
            min-height: 0;
            border: 1px solid #e2e8f0;
        }

        .chat-card-header {
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            padding: 24px 40px;
            border-bottom: 3px solid #e2e8f0;
            position: relative;
        }

        .chat-card-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 12px;
            color: #2d3748;
        }

        .chat-icon {
            font-size: 2rem;
            color: #4299e1;
        }

        .message-stats {
            font-size: 0.95rem;
            color: #64748b;
            margin-top: 8px;
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .stat-item {
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .chat-body-content {
            flex: 1;
            padding: 40px;
            overflow-y: auto;
            background: #fafbff;
            scroll-behavior: smooth;
        }

            .chat-body-content::-webkit-scrollbar {
                width: 10px;
            }

            .chat-body-content::-webkit-scrollbar-track {
                background: #f1f5f9;
            }

            .chat-body-content::-webkit-scrollbar-thumb {
                background: linear-gradient(180deg, #cbd5e1 0%, #94a3b8 100%);
                border-radius: 10px;
            }

                .chat-body-content::-webkit-scrollbar-thumb:hover {
                    background: linear-gradient(180deg, #94a3b8 0%, #64748b 100%);
                }

        .chat-message {
            padding: 20px 24px;
            border-radius: 24px;
            max-width: 65%;
            word-wrap: break-word;
            margin-bottom: 20px;
            font-size: 1.05rem;
            position: relative;
            line-height: 1.7;
            animation: messageSlide 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
            display: flex;
            flex-direction: column;
        }

        @@keyframes messageSlide {
            from

        {
            opacity: 0;
            transform: translateY(20px) scale(0.9);
        }

        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }

        }

        .user-message {
            margin-left: auto;
            background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
            color: white;
            border-bottom-right-radius: 8px;
            box-shadow: 0 8px 25px rgba(66, 153, 225, 0.3);
        }

        .ai-message {
            margin-right: auto;
            background: white;
            color: #1f2937;
            border: 2px solid #e2e8f0;
            border-bottom-left-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.06);
        }

        .message-header {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 12px;
        }

        .message-avatar {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            font-size: 1.3rem;
            flex-shrink: 0;
        }

        .user-message .message-avatar {
            background: rgba(255, 255, 255, 0.2);
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        .ai-message .message-avatar {
            background: linear-gradient(135deg, #e0e7ff 0%, #c7d2fe 100%);
            border: 2px solid #c7d2fe;
        }

        .message-sender {
            font-weight: 700;
            font-size: 0.9rem;
        }

        .user-message .message-sender {
            color: rgba(255, 255, 255, 0.95);
        }

        .ai-message .message-sender {
            color: #4299e1;
        }
    </style>
}

<div class="chat-detail-wrapper">
    <div class="container chat-detail-container">
        <div class="chat-detail-header">
            <a asp-action="History" class="back-button">
                ← Quay lại
            </a>
            <h1 class="chat-detail-title">💬 Chi tiết Cuộc trò chuyện</h1>
        </div>

        <div class="chat-container-card">
            <div class="chat-card-header">
                <h2 class="chat-card-title">
                    <span class="chat-icon">🤖</span>
                    Nutrition AI Assistant
                </h2>
                @if (Model != null && Model.Any())
                {
                    <div class="message-stats">
                        <span class="stat-item">
                            <strong>📊</strong> @Model.Count tin nhắn
                        </span>
                        <span class="stat-item">
                            <strong>📅</strong> @Model.First().Timestamp.ToString("dd/MM/yyyy")
                        </span>
                        <span class="stat-item">
                            <strong>🕒</strong> @Model.First().Timestamp.ToString("HH:mm")
                        </span>
                    </div>
                }
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="chat-body-content">
                    <div class="no-history">
                        <div class="no-history-icon">🤖💭</div>
                        <h3 class="no-history-title">Chưa có cuộc trò chuyện</h3>
                        <p class="no-history-text">
                            Bạn chưa có bất kỳ cuộc trò chuyện nào với Nutrition AI.<br>
                            Hãy bắt đầu cuộc trò chuyện đầu tiên để nhận tư vấn dinh dưỡng cá nhân hóa!
                        </p>
                        <a href="/Chat/Index" class="start-chat-link">
                            ✨ Bắt đầu trò chuyện
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="chat-body-content">
                    @{
                        DateTime? lastDate = null;
                        Func<string, string> formatChatContent = (content) =>
                        {
                            if (string.IsNullOrEmpty(content)) return string.Empty;
                            string formatted = content;

                            // 1. Heading
                            formatted = System.Text.RegularExpressions.Regex.Replace(formatted, @"^# (.*)$", "<h1>$1</h1>", System.Text.RegularExpressions.RegexOptions.Multiline);
                            formatted = System.Text.RegularExpressions.Regex.Replace(formatted, @"^## (.*)$", "<h2>$1</h2>", System.Text.RegularExpressions.RegexOptions.Multiline);
                            formatted = System.Text.RegularExpressions.Regex.Replace(formatted, @"^### (.*)$", "<h3>$1</h3>", System.Text.RegularExpressions.RegexOptions.Multiline);

                            // 2. Bold
                            formatted = System.Text.RegularExpressions.Regex.Replace(formatted, @"\*\*(.*?)\*\*", "<strong>$1</strong>");

                            // 3. Italic
                            formatted = System.Text.RegularExpressions.Regex.Replace(formatted, @"\*(.*?)\*", "<em>$1</em>");

                            // 4. Code block
                            formatted = System.Text.RegularExpressions.Regex.Replace(formatted, @"```([\s\S]*?)```", "<pre><code>$1</code></pre>");

                            // 5. Inline code
                            formatted = System.Text.RegularExpressions.Regex.Replace(formatted, @"`(.*?)`", "<code>$1</code>");

                            // 6. Quote
                            formatted = System.Text.RegularExpressions.Regex.Replace(formatted, @"^> (.*)$", "<blockquote>$1</blockquote>", System.Text.RegularExpressions.RegexOptions.Multiline);

                            // 7. Link
                            formatted = System.Text.RegularExpressions.Regex.Replace(formatted, @"\[(.*?)\]\((.*?)\)", "<a href=\"$2\" target=\"_blank\" rel=\"noopener noreferrer\">$1</a>");

                            // 8. List
                            formatted = System.Text.RegularExpressions.Regex.Replace(formatted, @"^[\s]*[\*-][\s](.*)", "<li>$1</li>", System.Text.RegularExpressions.RegexOptions.Multiline);

                            // Bọc list trong <ul>
                            formatted = System.Text.RegularExpressions.Regex.Replace(formatted, @"(<li>.*?</li>(\s*<br>\s*|)*)+", match => "<ul>" + match.Value.Replace("<br>", "") + "</ul>");

                            // 9. Line breaks và paragraphs
                            formatted = formatted.Replace("\n\n", "</p><p>");
                            formatted = formatted.Replace("\n", "<br>");

                            if (!formatted.StartsWith("<h") && !formatted.StartsWith("<ul") && !formatted.StartsWith("<ol") && !formatted.StartsWith("<pre") && !formatted.StartsWith("<blockquote"))
                            {
                                formatted = "<p>" + formatted + "</p>";
                            }

                            return formatted;
                        };
                        foreach (var message in Model)
                        {
                            if (lastDate == null || lastDate.Value.Date != message.Timestamp.Date)
                            {
                                <div class="message-divider">
                                    <span>📅 @message.Timestamp.ToString("dd/MM/yyyy")</span>
                                </div>
                                lastDate = message.Timestamp;
                            }

                            // var formattedContent = message.Content
                            // .Replace("**", "<strong>")
                            // .Replace("\n", "<br>");
                            var formattedContent = formatChatContent(message.Content);


                            var cssClass = message.Role == "User" ? "user-message" : "ai-message";
                            var avatar = message.Role == "User" ? "👤" : "🤖";
                            var sender = message.Role == "User" ? "Bạn" : "Nutrition AI";

                            <div class="chat-message @cssClass">
                                <div class="message-header">
                                    <div class="message-avatar">@avatar</div>
                                    <span class="message-sender">@sender</span>
                                </div>
                                <div class="message-content">
                                    @Html.Raw(formattedContent)
                                </div>
                                <span class="timestamp">
                                    @message.Timestamp.ToString("HH:mm")
                                </span>
                            </div>
                        }
                    }
                </div>
            }

            <div class="chat-footer">
                <div class="input-group">
                    <input type="text"
                           id="detailChatInput"
                           class="form-control"
                           placeholder="Nhập tin nhắn của bạn..."
                           autocomplete="off"
                           aria-label="Nhập tin nhắn" />
                    <button class="btn btn-success"
                            id="detailSendBtn"
                            aria-label="Gửi tin nhắn">
                        Gửi 🚀
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const detailChatBody = document.querySelector('.chat-body-content');
        const detailChatInput = document.getElementById('detailChatInput');
        const detailSendBtn = document.getElementById('detailSendBtn');
        let isDetailWaitingForAI = false;

        // BỔ SUNG: Hàm format Markdown đơn giản cho JS runtime
        function formatMarkdownFinal(text) {
            if (!text) return '';
            let formatted = text;

            formatted = formatted.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>');

            // Xử lý list items (tạo <ul><li>)
            // Lưu ý: Regex này sẽ bao các list item trong <ul>
            formatted = formatted.replace(/^[\s]*[\*-][\s](.*)/gm, '<li>$1</li>');
            formatted = formatted.replace(/(<li>.*?<\/li>(\s*<br>\s*|)*)+/g, (match) => {
                let listContent = match.replace(/<br>/g, '');
                listContent = listContent.replace(/<\/li><li>/g, '</li>\n<li>');
                return `<ul>${listContent}</ul>`;
            });

            // Xử lý xuống dòng cho paragraphs
            formatted = formatted.replace(/\n\n/g, '</p><p>');
            formatted = formatted.replace(/\n/g, '<br>');

            // Bọc trong <p>
            if (!formatted.startsWith('<ul') && !formatted.startsWith('<p>')) {
                formatted = '<p>' + formatted + '</p>';
            }

            return formatted;
        }

        function appendMessage(sender, message, isTyping = false) {
            const msgDiv = document.createElement('div');
            msgDiv.className = `chat-message ${sender === 'user' ? 'user-message' : 'ai-message'}`;

            const avatar = sender === 'user' ? '👤' : '🤖';
            const senderName = sender === 'user' ? 'Bạn' : 'Nutrition AI';

            if (isTyping) {
                msgDiv.innerHTML = `
                    <div class="message-header">
                        <div class="message-avatar">${avatar}</div>
                        <span class="message-sender">${senderName}</span>
                    </div>
                    <div class="message-content">
                        <span class="typing-dot"></span>
                        <span class="typing-dot"></span>
                        <span class="typing-dot"></span>
                    </div>
                `;
                msgDiv.id = 'typingIndicatorDetail';
            } else {
                let formattedMessage = message
                    .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                    .replace(/\n/g, '<br>');

                const timestamp = new Date().toLocaleTimeString('vi-VN', { hour: '2-digit', minute: '2-digit' });

                msgDiv.innerHTML = `
                    <div class="message-header">
                        <div class="message-avatar">${avatar}</div>
                        <span class="message-sender">${senderName}</span>
                    </div>
                    <div class="message-content">
                        ${formattedMessage}
                    </div>
                    <span class="timestamp">${timestamp}</span>
                `;
            }

            detailChatBody.appendChild(msgDiv);
            setTimeout(() => {
                msgDiv.scrollIntoView({ behavior: 'smooth', block: 'end' });
            }, 100);
            return msgDiv;
        }

        function typeResponse(element, text) {
            let index = 0;
            element.querySelector('.message-content').innerHTML = '';

            const timestampEl = element.querySelector('.timestamp');
            if (timestampEl) timestampEl.style.display = 'none';

            const interval = setInterval(() => {
                if (index < text.length) {
                    const char = text.charAt(index);
                    const contentDiv = element.querySelector('.message-content');

                    contentDiv.innerHTML += char;

                    if (char === '*' && text.charAt(index + 1) === '*') {
                        contentDiv.innerHTML = contentDiv.innerHTML.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>');
                    }

                    index++;
                    detailChatBody.scrollTop = detailChatBody.scrollHeight;
                } else {
                    clearInterval(interval);
                    isDetailWaitingForAI = false;
                    detailSendBtn.disabled = false;
                    detailChatInput.disabled = false;

                    const contentDiv = element.querySelector('.message-content');
                    contentDiv.innerHTML = formatMarkdownFinal(text);


                    if (timestampEl) timestampEl.style.display = 'block';
                }
            }, 20);
        }

        async function sendMessageDetail() {
            const question = detailChatInput.value.trim();
            if (question === "" || isDetailWaitingForAI) return;

            detailChatInput.blur();
            appendMessage('user', question);
            detailChatInput.value = '';

            detailSendBtn.disabled = true;
            detailChatInput.disabled = true;
            isDetailWaitingForAI = true;

            const typingElement = appendMessage('ai', '', true);

            try {
                const response = await fetch('/Chat/GetAdvice', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ question: question })
                });
                const data = await response.json();

                typingElement.remove();

                if (data.error) {
                    appendMessage('ai', `**Lỗi AI:** ${data.error}`, false);
                    isDetailWaitingForAI = false;
                    detailSendBtn.disabled = false;
                    detailChatInput.disabled = false;
                } else {
                    const newAiMessage = appendMessage('ai', '', false);
                    typeResponse(newAiMessage, data.advice);
                }
            } catch (error) {
                if (document.getElementById('typingIndicatorDetail')) {
                    typingElement.remove();
                }
                appendMessage('ai', 'Lỗi kết nối dịch vụ AI hoặc Backend. Vui lòng thử lại sau.', false);
                isDetailWaitingForAI = false;
                detailSendBtn.disabled = false;
                detailChatInput.disabled = false;
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            detailSendBtn.addEventListener('click', sendMessageDetail);
            detailChatInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    sendMessageDetail();
                }
            });

            detailChatBody.scrollTop = detailChatBody.scrollHeight;
        });
    </script>
}