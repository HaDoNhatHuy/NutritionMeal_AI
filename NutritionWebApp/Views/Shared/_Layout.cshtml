    <!-- Cửa sổ Chat Popup -->
    <div class="chat-popup" id="chatPopup">
        <!-- Chat Header -->
        <div class="chat-header">
            <h5>🤖 Nutrition AI</h5>
            <button class="chat-close-btn" id="closeChatBtn" aria-label="Đóng chat">×</button>
        </div>

        <!-- KHỐI NAVIGATOR: THÊM NÚT CHUYỂN ĐỔI CHẾ ĐỘ -->
        <div id="chatModeToggles" style="display: flex; justify-content: space-around; background: #fef3c7; border-bottom: 1px solid #fcd34d;">
            <button id="showChatBtn" class="btn btn-sm btn-warning w-50" style="border-radius: 0; font-weight: 700;">💬 Chat</button>
            <button id="showRecipeBtn" class="btn btn-sm w-50" style="border-radius: 0;">🍽️ Công Thức</button>
        </div>
        <!-- KHỐI CHỨA NỘI DUNG CHAT (CHẾ ĐỘ MẶC ĐỊNH) -->
        <div id="chatModeContent" style="display: flex; flex-direction: column; flex: 1; height: 100%;">

            <!-- Nút Đề xuất Chủ động -->
            <button id="proactiveAdviceBtn" class="proactive-btn">
                ✨ Lời khuyên Dinh dưỡng Hôm nay
            </button>

            <!-- Chat Body -->
            <div class="chat-body-content" id="chatBody">
                <!-- Tin nhắn sẽ được thêm vào đây bằng JavaScript -->
            </div>

            <!-- Chat Footer -->
            <div class="chat-footer">
                <div class="input-group">
                    <input type="text"
                           id="chatInput"
                           class="form-control"
                           placeholder="Hỏi AI về dinh dưỡng..."
                           autocomplete="off"
                           aria-label="Nhập tin nhắn" />
                    <button class="btn btn-success"
                            id="sendBtn"
                            aria-label="Gửi tin nhắn">
                        Gửi
                    </button>
                </div>
            </div>
        </div>
        <!-- KHỐI CHỨA NỘI DUNG RECIPE GENERATOR (CHẾ ĐỘ ẨN) -->
        <div id="recipeModeContent" style="display: none; flex-direction: column; flex: 1; height: 100%; padding: 20px; overflow-y: auto;">

            <h4 style="color: #667eea; font-weight: 700; margin-bottom: 15px;">
                Nhập Yêu Cầu Công Thức
            </h4>
            <div class="mb-3">
                <label for="recipeRequest" class="form-label" style="font-weight: 600; font-size: 0.9rem;">
                    Bạn muốn món ăn như thế nào?
                </label>
                <input type="text" class="form-control" id="recipeRequest"
                       placeholder="VD: Dưới 400 kcal, giàu protein, dùng thịt bò"
                       style="border-radius: 10px; padding: 10px;">
            </div>
            <button class="btn btn-success w-100 mb-3" id="generateRecipeBtn" onclick="requestRecipe()"
                    style="background: linear-gradient(135deg, #48bb78 0%, #38a169 100%); border: none;">
                ✨ Gợi ý Công thức
            </button>

            <div id="recipeResultContainer" class="mt-2">
                <!-- Kết quả sẽ hiển thị ở đây -->
            </div>

