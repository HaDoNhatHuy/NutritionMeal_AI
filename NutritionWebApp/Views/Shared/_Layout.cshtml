                <div class="input-group">
                    <input type="text"
                           id="chatInput"
                           class="form-control"
                           placeholder="Hỏi AI về dinh dưỡng..."
                           autocomplete="off"
                           aria-label="Nhập tin nhắn" />
                    <button class="btn btn-success"
                            id="sendBtn"
                            aria-label="Gửi tin nhắn">
                        Gửi
                    </button>
                </div>
            </div>
