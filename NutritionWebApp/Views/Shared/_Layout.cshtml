        </div>
    </footer>

    <!-- Chat Icon & Popup (simplified) -->
    <div class="floating-chat-icon" id="chatIcon" title="Chat với AI">💬</div>

    <div class="chat-popup" id="chatPopup">
        <div class="chat-header">
            <h5>🤖 Nutrition AI</h5>
            <button class="chat-close-btn" id="closeChatBtn">×</button>
        </div>

        <div id="chatModeToggles">
            <button id="showChatBtn" class="btn-warning">💬 Chat</button>
            <button id="showRecipeBtn">🍽️ Công thức</button>
        </div>

        <div id="chatModeContent" style="display: flex; flex-direction: column; flex: 1;">
            <button id="proactiveAdviceBtn">✨ Lời khuyên hôm nay</button>
            <div class="chat-body-content" id="chatBody"></div>
            <div class="chat-footer">
                <div class="input-group">
                    <input type="text" id="chatInput" class="form-control" placeholder="Hỏi AI về dinh dưỡng..." autocomplete="off" />
                    <button class="btn" id="sendBtn">Gửi</button>
                </div>
            </div>
        </div>

        <div id="recipeModeContent" style="display: none; flex-direction: column; flex: 1; padding: 1.5rem; overflow-y: auto;">
            <h4>Nhập Yêu Cầu Công Thức</h4>
            <div class="mb-3">
                <label for="recipeRequest" class="form-label">Bạn muốn món ăn như thế nào?</label>
                <input type="text" class="form-control" id="recipeRequest" placeholder="VD: Dưới 400 kcal, giàu protein">
            </div>
            <button class="btn w-100 mb-3" id="generateRecipeBtn" onclick="requestRecipe()">✨ Tạo công thức</button>
            <div id="recipeResultContainer"></div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @* Chỉ load chatbox.js khi KHÔNG phải trang Chat *@   
    @if (ViewContext.RouteData.Values["controller"]?.ToString() != "Chat")
    {
        <script src="~/js/chatbox.js"></script>
    }
    @* <script src="~/js/chatbox.js"></script> *@
    @await RenderSectionAsync("Scripts", required: false)     
</body>
