<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <title>@ViewData["Title"] - Nutrition AI</title>
    <link rel="icon" type="image/x-icon" href="/icon.ico">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/mobile.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="mobile-body">
    <!-- Mobile Header -->
    <header class="mobile-header">
        <div class="mobile-header-content">
            <button class="menu-toggle" id="menuToggle">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <div class="header-title">@ViewData["Title"]</div>
            @if (Context.Session.GetInt32("UserId").HasValue)
            {
                <div class="header-avatar">
                    <span>@Context.Session.GetString("FullName")?.Substring(0, 1)</span>
                </div>
            }
        </div>
    </header>

    <!-- Mobile Sidebar -->
    <div class="mobile-sidebar" id="mobileSidebar">
        <div class="sidebar-header">
            <div class="app-logo">🥗 Nutrition AI</div>
            <button class="sidebar-close" id="sidebarClose">×</button>
        </div>

        <nav class="sidebar-nav">
            <a asp-controller="Dashboard" asp-action="Index" class="nav-item">
                <span class="nav-icon">🏠</span>
                <span class="nav-text">Trang Chủ</span>
            </a>

            <div class="nav-section">Theo Dõi</div>
            <a asp-controller="FoodTracker" asp-action="Index" class="nav-item">
                <span class="nav-icon">🍎</span>
                <span class="nav-text">Bữa Ăn</span>
            </a>
            <a asp-controller="WaterTracker" asp-action="Index" class="nav-item">
                <span class="nav-icon">💧</span>
                <span class="nav-text">Nước</span>
            </a>
            <a asp-controller="BodyMeasurement" asp-action="Index" class="nav-item">
                <span class="nav-icon">⚖️</span>
                <span class="nav-text">Cân Nặng</span>
            </a>
            <a asp-controller="Habits" asp-action="Index" class="nav-item">
                <span class="nav-icon">✅</span>
                <span class="nav-text">Thói Quen</span>
            </a>

            <div class="nav-section">AI Tools</div>
            <a asp-controller="Home" asp-action="FoodAnalyze" class="nav-item">
                <span class="nav-icon">🍽️</span>
                <span class="nav-text">Phân Tích Món</span>
            </a>
            <a asp-controller="Chat" asp-action="Index" class="nav-item">
                <span class="nav-icon">💬</span>
                <span class="nav-text">Chat AI</span>
            </a>
            <a asp-controller="MealPlanner" asp-action="Index" class="nav-item">
                <span class="nav-icon">🍽️</span>
                <span class="nav-text">Kế Hoạch Ăn</span>
            </a>
            <a asp-controller="Workout" asp-action="Index" class="nav-item">
                <span class="nav-icon">💪</span>
                <span class="nav-text">Kế Hoạch Tập</span>
            </a>

            <div class="nav-section">Thư Viện</div>
            <a asp-controller="Recipe" asp-action="Index" class="nav-item">
                <span class="nav-icon">👩‍🍳</span>
                <span class="nav-text">Công Thức</span>
            </a>
            <a asp-controller="Workout" asp-action="Library" class="nav-item">
                <span class="nav-icon">🏋️</span>
                <span class="nav-text">Bài Tập</span>
            </a>
            <a asp-controller="HealthTips" asp-action="Index" class="nav-item">
                <span class="nav-icon">💡</span>
                <span class="nav-text">Kiến Thức</span>
            </a>

            <div class="nav-section">Khác</div>
            <a asp-controller="Report" asp-action="Index" class="nav-item">
                <span class="nav-icon">📈</span>
                <span class="nav-text">Báo Cáo</span>
            </a>
            <a asp-controller="Settings" asp-action="ViewStats" class="nav-item">
                <span class="nav-icon">❤️</span>
                <span class="nav-text">Hồ Sơ</span>
            </a>

            @if (Context.Session.GetInt32("UserId").HasValue)
            {
                <a asp-controller="Account" asp-action="Logout" class="nav-item logout">
                    <span class="nav-icon">🚪</span>
                    <span class="nav-text">Đăng Xuất</span>
                </a>
            }
        </nav>
    </div>

    <div class="mobile-overlay" id="mobileOverlay"></div>

    <!-- Main Content -->
    <main class="mobile-main">
        @RenderBody()
    </main>

    <!-- Bottom Navigation -->
    <nav class="bottom-nav">
        <a asp-controller="Dashboard" asp-action="Index" class="bottom-nav-item">
            <span class="bottom-nav-icon">🏠</span>
            <span class="bottom-nav-text">Trang Chủ</span>
        </a>
        <a asp-controller="FoodTracker" asp-action="Index" class="bottom-nav-item">
            <span class="bottom-nav-icon">🍎</span>
            <span class="bottom-nav-text">Theo Dõi</span>
        </a>
        <a asp-controller="Home" asp-action="FoodAnalyze" class="bottom-nav-item bottom-nav-center">
            <span class="bottom-nav-icon">📸</span>
        </a>
        <a asp-controller="Chat" asp-action="Index" class="bottom-nav-item">
            <span class="bottom-nav-icon">💬</span>
            <span class="bottom-nav-text">AI Chat</span>
        </a>
        <a asp-controller="Report" asp-action="Index" class="bottom-nav-item">
            <span class="bottom-nav-icon">📊</span>
            <span class="bottom-nav-text">Báo Cáo</span>
        </a>
    </nav>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/mobile.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>