@model NutritionWebApp.ViewModels.SettingsViewModel
@{
    ViewData["Title"] = "Cài đặt cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <style>
        .settings-wrapper {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 60px 0;
        }

        .settings-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .settings-title {
            color: white;
            font-size: 2.5rem;
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
            margin-bottom: 10px;
        }

        .settings-subtitle {
            color: rgba(255,255,255,0.9);
            font-size: 1.1rem;
        }

        .settings-container {
            max-width: 800px;
            margin: 0 auto;
        }

        .settings-card {
            background: white;
            border-radius: 25px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.2);
            margin-bottom: 30px;
        }

        .success-message {
            background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
            border: 2px solid #28a745;
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            gap: 15px;
            animation: slideDown 0.5s ease;
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .success-icon {
            font-size: 2rem;
        }

        .success-text {
            color: #155724;
            font-weight: 600;
            font-size: 1.1rem;
            margin: 0;
        }

        .form-section {
            margin-bottom: 30px;
        }

        .section-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .form-label {
            font-weight: 600;
            color: #4a5568;
            margin-bottom: 8px;
            font-size: 0.95rem;
        }

        .form-control, .form-select {
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            padding: 12px 16px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .form-control:focus, .form-select:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
                outline: none;
            }

        .input-group-custom {
            position: relative;
        }

        .input-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.2rem;
            pointer-events: none;
            z-index: 10;
        }

        .form-control.with-icon {
            padding-right: 45px;
        }

        .text-danger {
            font-size: 0.85rem;
            margin-top: 5px;
            display: block;
        }

        .goal-options {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
            margin-top: 10px;
        }

        .goal-option {
            display: none;
        }

        .goal-label {
            display: block;
            padding: 20px;
            border: 2px solid #e2e8f0;
            border-radius: 15px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            background: #f7fafc;
        }

            .goal-label:hover {
                border-color: #667eea;
                background: #eef2ff;
                transform: translateY(-2px);
            }

        .goal-option:checked + .goal-label {
            border-color: #667eea;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        .goal-icon {
            font-size: 2rem;
            display: block;
            margin-bottom: 8px;
        }

        .goal-text {
            font-weight: 600;
            font-size: 1rem;
        }

        .submit-btn {
            background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
            border: none;
            border-radius: 15px;
            padding: 16px;
            font-size: 1.2rem;
            font-weight: 700;
            color: white;
            width: 100%;
            margin-top: 20px;
            box-shadow: 0 10px 25px rgba(72, 187, 120, 0.3);
            transition: all 0.3s ease;
        }

            .submit-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 15px 35px rgba(72, 187, 120, 0.4);
            }

        .health-stats-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 20px;
            padding: 35px;
            color: white;
            box-shadow: 0 15px 40px rgba(102, 126, 234, 0.3);
            animation: fadeIn 0.5s ease;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: scale(0.95);
            }

            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        .stats-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .stat-item {
            background: rgba(255,255,255,0.15);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 20px;
            text-align: center;
        }

        .stat-label {
            font-size: 0.9rem;
            opacity: 0.9;
            margin-bottom: 8px;
        }

        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            display: block;
        }

        .stat-unit {
            font-size: 0.85rem;
            opacity: 0.8;
        }

        @@media (max-width: 768px) {
            .settings-title {
                font-size: 2rem;
            }

            .settings-card {
                padding: 25px;
            }

            .goal-options {
                grid-template-columns: 1fr;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
}

<div class="settings-wrapper">
    <div class="container settings-container">
        <div class="settings-header">
            <h1 class="settings-title">⚙️ Cài đặt cá nhân</h1>
            <p class="settings-subtitle">Cập nhật thông tin để nhận gợi ý dinh dưỡng phù hợp</p>
        </div>

        <div class="settings-card">
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="success-message">
                    <span class="success-icon">✅</span>
                    <p class="success-text">@ViewBag.Message</p>
                </div>
            }

            <form asp-action="Index" method="post">
                <div class="form-section">
                    <h3 class="section-title">📋 Thông tin cơ bản</h3>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Tuổi</label>
                            <div class="input-group-custom">
                                <input asp-for="Age" class="form-control with-icon" type="number" placeholder="Nhập tuổi của bạn" />
                                <span class="input-icon">🎂</span>
                            </div>
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Giới tính</label>
                            <select asp-for="Gender" class="form-select">
                                <option value="">Chọn giới tính</option>
                                <option value="true">👨 Nam</option>
                                <option value="false">👩 Nữ</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3 class="section-title">📏 Chỉ số cơ thể</h3>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Chiều cao</label>
                            <div class="input-group-custom">
                                <input asp-for="Height" class="form-control with-icon" type="number" step="0.1" placeholder="VD: 170" />
                                <span class="input-icon">📏</span>
                            </div>
                            <span asp-validation-for="Height" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Cân nặng</label>
                            <div class="input-group-custom">
                                <input asp-for="Weight" class="form-control with-icon" type="number" step="0.1" placeholder="VD: 65" />
                                <span class="input-icon">⚖️</span>
                            </div>
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3 class="section-title">🎯 Mục tiêu của bạn</h3>
                    <div class="goal-options">
                        <div>
                            <input type="radio" asp-for="Goal" value="TangCan" class="goal-option" id="goal1" />
                            <label for="goal1" class="goal-label">
                                <span class="goal-icon">💪</span>
                                <span class="goal-text">Tăng cân</span>
                            </label>
                        </div>
                        <div>
                            <input type="radio" asp-for="Goal" value="GiamCan" class="goal-option" id="goal2" />
                            <label for="goal2" class="goal-label">
                                <span class="goal-icon">🔥</span>
                                <span class="goal-text">Giảm cân</span>
                            </label>
                        </div>
                        <div>
                            <input type="radio" asp-for="Goal" value="AnChay" class="goal-option" id="goal3" />
                            <label for="goal3" class="goal-label">
                                <span class="goal-icon">🥗</span>
                                <span class="goal-text">Ăn chay</span>
                            </label>
                        </div>
                        <div>
                            <input type="radio" asp-for="Goal" value="EatClean" class="goal-option" id="goal4" />
                            <label for="goal4" class="goal-label">
                                <span class="goal-icon">🥑</span>
                                <span class="goal-text">Eat Clean</span>
                            </label>
                        </div>
                    </div>
                </div>

                <button type="submit" class="submit-btn">
                    💾 Lưu cài đặt
                </button>
            </form>
        </div>

        @if (ViewBag.BMR != null)
        {
            <div class="health-stats-card">
                <h4 class="stats-title">📊 Chỉ số sức khỏe của bạn</h4>
                <div class="stats-grid">
                    <div class="stat-item">
                        <div class="stat-label">BMR</div>
                        <span class="stat-value">@(((double)ViewBag.BMR).ToString("F0"))</span>
                        <div class="stat-unit">kcal/ngày</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">TDEE</div>
                        <span class="stat-value">@(((double)ViewBag.TDEE).ToString("F0"))</span>
                        <div class="stat-unit">kcal/ngày</div>
                    </div>
                </div>
                <p style="margin-top: 20px; opacity: 0.9; font-size: 0.9rem; text-align: center; margin-bottom: 0;">
                    💡 TDEE dựa trên mức hoạt động trung bình
                </p>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Set selected goal on page load
        document.addEventListener('DOMContentLoaded', function() {
            const goalValue = '@Model.Goal';
            if (goalValue) {
                const goalRadio = document.querySelector(`input[value="${goalValue}"]`);
                if (goalRadio) {
                    goalRadio.checked = true;
                }
            }
        });
    </script>
}