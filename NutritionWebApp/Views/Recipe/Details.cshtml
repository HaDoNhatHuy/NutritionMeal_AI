@using System.Text.Json
@model NutritionWebApp.Models.Entities.Recipe
@{
    ViewData["Title"] = Model.RecipeName;
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Deserialize JSON strings
    List<string> ingredientsList = new List<string>();
    List<string> instructionsList = new List<string>();
    try
    {
        if (!string.IsNullOrEmpty(Model.Ingredients))
        {
            ingredientsList = JsonSerializer.Deserialize<List<string>>(Model.Ingredients) ?? new List<string>();
        }
        if (!string.IsNullOrEmpty(Model.Instructions))
        {
            instructionsList = JsonSerializer.Deserialize<List<string>>(Model.Instructions) ?? new List<string>();
        }
    }
    catch { }
}

@section Styles {
    <style>
        .recipe-view-wrapper {
            /* Tái sử dụng phong cách nền */
            min-height: 100vh;
            /* background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%); */
            padding: 40px 0;
        }

        .recipe-main-card {
            background: white;
            border-radius: 24px;
            padding: 45px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }

        .recipe-title {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--primary-color);
            margin-bottom: 10px;
        }

        .meta-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
            gap: 15px;
            margin: 20px 0;
        }
        /* Style cho Ingredients/Instructions tương tự MealPlanner/View.cshtml [9] */
        .like-btn {
            background: #e74c3c;
            color: white;
            border: none;
            padding: 10px 25px;
            border-radius: 12px;
            font-weight: 700;
            transition: all 0.2s ease;
        }
    </style>
}

<div class="recipe-view-wrapper">
    <div class="container" style="max-width: 900px;">
        <div class="recipe-main-card">
            <h1 class="recipe-title">🍽️ @Model.RecipeName</h1>
            <p class="text-secondary">@Model.Description</p>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <span class="badge bg-secondary">Tạo bởi: @(Model.CreatedBy?.FullName ?? "AI")</span>
                <span class="text-muted">Lượt thích: <span id="likeCount">@Model.Likes</span></span>
            </div>

            <!-- Nutrition Grid -->
            <div class="meta-grid">
                <div class="info-badge" style="background: #f0f9ff;">
                    <div class="info-value">@Model.Calories.ToString("F0")</div>
                    <div class="info-label">Calo</div>
                </div>
                <!-- ... Thêm Protein, Carbs, Fat tương tự Meal Planner View [10] -->
            </div>

            <!-- Ingredients -->
            <h3 class="mt-4" style="color: var(--primary-color);">🛒 Nguyên liệu</h3>
            <ul class="list-group">
                @foreach (var item in ingredientsList)
                {
                    <li class="list-group-item">@item</li>
                }
            </ul>

            <!-- Instructions -->
            <h3 class="mt-4" style="color: var(--primary-color);">👩‍🍳 Hướng dẫn</h3>
            <ol class="list-group">
                @foreach (var item in instructionsList)
                {
                    <li class="list-group-item">@item</li>
                }
            </ol>

            <!-- Action: Like/Unlike -->
            <div class="text-center mt-5">
                <button class="like-btn" data-id="@Model.RecipeId" id="toggleLikeBtn">
                    @(ViewBag.IsLiked ? "❤️ Đã Thích" : "👍 Thích Công thức")
                </button>
            </div>

        </div>
    </div>
</div>

<div class="recipe-review-section container" style="max-width: 900px;">
    <h2 class="mt-5 mb-4" style="color: var(--primary-color);">⭐ Đánh giá & Bình luận</h2>

    <div id="reviewSummary" class="card p-3 mb-4 text-center" style="background: #e0f2fe;">
        <p style="font-size: 1.2rem; font-weight: 700;">Đang tải đánh giá...</p>
    </div>

    <!-- Form Review (Chỉ hiện nếu chưa review) -->
    <div class="card p-4 mb-5" id="reviewFormCard" style="border: 1px solid #bfdbfe;">
        <h4 style="color: #3b82f6;">Gửi đánh giá của bạn</h4>
        <div id="starRatingArea" class="mb-3">
            <span style="font-size: 2rem; cursor: pointer;" data-rating="1">☆</span>
            <span style="font-size: 2rem; cursor: pointer;" data-rating="2">☆</span>
            <span style="font-size: 2rem; cursor: pointer;" data-rating="3">☆</span>
            <span style="font-size: 2rem; cursor: pointer;" data-rating="4">☆</span>
            <span style="font-size: 2rem; cursor: pointer;" data-rating="5">☆</span>
            <input type="hidden" id="reviewRating" value="0" required />
            <span id="ratingText" class="ms-3 text-muted"> (Chưa chọn)</span>
        </div>

        <textarea id="reviewComment" class="form-control mb-3" rows="3" placeholder="Chia sẻ cảm nhận của bạn về công thức này..."></textarea>
        <button id="submitReviewBtn" class="btn btn-primary" style="max-width: 200px;">Gửi Đánh giá</button>
    </div>

    <!-- Danh sách Reviews -->
    <div id="reviewList">
        <!-- Reviews will be loaded here -->
    </div>
</div>
@section Scripts {
    <script>
        document.getElementById('toggleLikeBtn').addEventListener('click', async function() {
            const recipeId = this.dataset.id;
            const btn = this;
            try {
                const response = await fetch(`/Recipe/ToggleLike/${recipeId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                });
                const data = await response.json();

                if (data.success) {
                    document.getElementById('likeCount').textContent = data.newCount;
                    if (data.action === 'liked') {
                        btn.textContent = '❤️ Đã Thích';
                        btn.style.backgroundColor = '#e74c3c';
                    } else {
                        btn.textContent = '👍 Thích Công thức';
                        btn.style.backgroundColor = '#6c757d'; // Màu xám cho Unlike
                    }
                } else {
                    alert('Lỗi: ' + data.error);
                }
            } catch (error) {
                alert('Lỗi kết nối. Vui lòng đăng nhập.');
                // Chuyển hướng về trang đăng nhập nếu chưa có phiên
                window.location.href = '/Account/Login';
            }
        });
    </script>
    <script>
        const recipeId = @Model.RecipeId;
        const userId = @(Context.Session.GetInt32("UserId") ?? 0);

        // --- 1. LOGIC RATING SAO ---
        let currentRating = 0;
        document.querySelectorAll('#starRatingArea span[data-rating]').forEach(star => {
            star.addEventListener('mouseover', function() {
                const hoverRating = parseInt(this.dataset.rating);
                updateStarDisplay(hoverRating, false);
            });
            star.addEventListener('mouseout', function() {
                updateStarDisplay(currentRating, false);
            });
            star.addEventListener('click', function() {
                currentRating = parseInt(this.dataset.rating);
                updateStarDisplay(currentRating, true);
                document.getElementById('reviewRating').value = currentRating;
            });
        });

        function updateStarDisplay(rating, permanent) {
            const stars = document.querySelectorAll('#starRatingArea span[data-rating]');
            let text = "";
            stars.forEach(star => {
                const starRating = parseInt(star.dataset.rating);
                star.textContent = starRating <= rating ? '★' : '☆';
                star.style.color = starRating <= rating ? '#ffc107' : '#ced4da';
            });

            if (permanent) {
                if (rating > 0) text = `(${rating} sao)`;
                document.getElementById('ratingText').textContent = text;
            }
        }

        // --- 2. LOGIC GỬI REVIEW ---
        document.getElementById('submitReviewBtn').addEventListener('click', async function() {
            if (userId === 0) {
                 alert('Vui lòng đăng nhập để đánh giá!');
                 return;
            }
            if (currentRating === 0) {
                 alert('Vui lòng chọn số sao!');
                 return;
            }
            const btn = this;
            btn.disabled = true;
            btn.textContent = 'Đang gửi...';

            const payload = {
                RecipeId: recipeId,
                Rating: currentRating,
                Comment: document.getElementById('reviewComment').value.trim()
            };

            try {
                const response = await fetch('/Recipe/AddReview', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                const data = await response.json();
                if (data.success) {
                    alert('✅ Đánh giá thành công! Vui lòng tải lại trang.');
                    document.getElementById('reviewFormCard').style.display = 'none';
                    loadReviews(); // Tải lại reviews ngay
                } else {
                    alert('Lỗi: ' + data.error);
                }
            } catch (error) {
                alert('Lỗi kết nối.');
            } finally {
                btn.disabled = false;
                btn.textContent = 'Gửi Đánh giá';
            }
        });

        // --- 3. LOGIC TẢI VÀ HIỂN THỊ REVIEWS ---
        async function loadReviews() {
            const reviewListContainer = document.getElementById('reviewList');
            const summaryContainer = document.getElementById('reviewSummary');

            try {
                const response = await fetch(`/Recipe/GetReviews/${recipeId}`);
                const data = await response.json();

                // Cập nhật Summary
                const avg = data.averageRating.toFixed(1);
                const total = data.totalReviews;
                summaryContainer.innerHTML = `
                    <p style="font-size: 1.5rem; font-weight: 800; color: #f59e0b;">
                        ${avg} / 5.0 ⭐
                    </p>
                    <p class="text-muted">Dựa trên ${total} đánh giá</p>
                `;

                // Render List
                if (total === 0) {
                     reviewListContainer.innerHTML = '<p class="text-center text-muted">Chưa có đánh giá nào.</p>';
                     return;
                }

                let reviewsHtml = '';
                data.reviews.forEach(review => {
                    const stars = '★'.repeat(review.rating) + '☆'.repeat(5 - review.rating);
                    reviewsHtml += `
                    <div class="card mb-3 p-3">
                        <div class="d-flex justify-content-between">
                            <strong>${review.userName}</strong>
                            <small class="text-muted">${new Date(review.createdAt).toLocaleDateString('vi-VN')}</small>
                        </div>
                        <div style="color: #ffc107; font-size: 1.2rem; margin: 5px 0;">${stars}</div>
                        <p>${review.comment || 'Không có bình luận.'}</p>
                    </div>
                    `;
                });
                reviewListContainer.innerHTML = reviewsHtml;

                // Kiểm tra nếu người dùng đã review, ẩn form
                const userReviewed = data.reviews.some(r => r.userName === '@Context.Session.GetString("FullName")');
                if (userReviewed) {
                     document.getElementById('reviewFormCard').style.display = 'none';
                }

            } catch (error) {
                 summaryContainer.innerHTML = '<p class="text-danger">Không thể tải đánh giá.</p>';
            }
        }

        document.addEventListener('DOMContentLoaded', loadReviews);
    </script>
}
}
